{
  "manifest_version": 3,

  "name": "OpenCerts Downloader Extension",
  "description": "Download OpenCerts in PNG or PDF",
  "version": "1.0.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/contentScript.js"],
          "all_frames": true
      }
  ],

  "background": {
    "service_worker": "js/serviceWorker.js",
    "type": "module"
  },

  "permissions": [
    "downloads",
    "contextMenus",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}