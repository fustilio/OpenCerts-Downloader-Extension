{
  "manifest_version": 2,

  "name": "OpenCerts Downloader Extension",
  "description": "Download OpenCerts in PNG or PDF",
  "version": "1.0.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"],
          "all_frames": true
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "<all_urls>",
    "downloads",
    "contextMenus",
    "storage"
  ]
}