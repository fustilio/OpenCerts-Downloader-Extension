{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "yarn",
    "tasks": [
        {
            "label": "install",
            "type": "shell",
            "command": "yarn",
            "args": ["install"]
        },
        {
            "label": "update",
            "type": "shell",
            "command": "yarn",
            "args": ["update"]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "yarn",
            "args": ["run", "test"]
        },
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "command": "yarn",
            "args": ["run", "watch"]
        }
    ]
}